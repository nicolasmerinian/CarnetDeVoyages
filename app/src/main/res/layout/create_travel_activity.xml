<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:text="@string/newTravel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newTravel"
        android:textSize="18dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/travelName"
        android:layout_below="@+id/newTravel"
        android:hint="Nom"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/travelDestination"
        android:layout_below="@+id/travelName"
        android:hint="Destination"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/travelDate"
        android:layout_below="@+id/travelDestination"
        android:hint="Date"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/travelDestination"
        android:id="@+id/buttonCreateTravel"
        android:text="@string/validateButton"/>

</RelativeLayout>
